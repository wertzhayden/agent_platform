    marginVertical: 3,
  },
  picker: {
    backgroundColor: '#eaeaea',
    marginVertical: 5,
  },
  tileSection: {
    flexDirection: 'column',
    gap: 12,
  },
  tile: {
    backgroundColor: '#FFD700',
    padding: 16,
    borderRadius: 10,
    marginVertical: 5,
  },
  tileText: {
    fontSize: 16,
    fontWeight: '500',
  },
  viewAllButton: {
    alignSelf: 'flex-end',
    backgroundColor: '#002244',
    paddingHorizontal: 10,
