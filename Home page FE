import React, { useState } from 'react';
import { View, Text, TextInput, TouchableOpacity, FlatList, Image, StyleSheet, ScrollView } from 'react-native';
import { SafeAreaView } from 'react-native';
import { Picker } from '@react-native-picker/picker';

export default function App() {
  const [sortOption, setSortOption] = useState('2025');
  const [searchQuery, setSearchQuery] = useState('');
  const [viewFavorites, setViewFavorites] = useState(false);

  const dynamicTiles = [
    {
      id: '1',
      college: 'Alabama',
      position: 'QB',
      year: '2025',
      ranking: '#1',
      draftRange: '1st-5th',
    },
    {
      id: '2',
      college: 'Ohio State',
      position: 'WR',
      year: '2025',
      ranking: '#2',
      draftRange: '1st-10th',
    },
    {
      id: '3',
      college: 'LSU',
      position: 'CB',
      year: '2026',
      ranking: '#5',
      draftRange: 'Top 15',
    },
  ];

  const logoImages = [
    require('./assets/logo1.png'),
    require('./assets/logo2.png'),
    require('./assets/logo3.png'),
  ];

  return (
    <SafeAreaView style={styles.container}>
      <ScrollView>
        <Text style={styles.header}>üèà College Football Homepage üèà</Text>

        <ScrollView horizontal showsHorizontalScrollIndicator={false} style={styles.logoBanner}>
          {logoImages.map((logo, index) => (
            <Image key={index} source={logo} style={styles.logo} />
          ))}
        </ScrollView>

        <View style={styles.topSection}>
          <Text style={styles.sectionTitle}>Teams</Text>
          <Text style={styles.sectionTitle}>Position</Text>
          <Text style={styles.sectionTitle}>Sort by:</Text>
          <Picker
            selectedValue={sortOption}
            style={styles.picker}
            onValueChange={(itemValue) => setSortOption(itemValue)}>
            <Picker.Item label="2025" value="2025" />
            <Picker.Item label="2026" value="2026" />
            <Picker.Item label="2027" value="2027" />
          </Picker>
          <Text style={styles.sectionTitle}>Home Tab</Text>
          <Text style={styles.sectionTitle}>Overall Rank</Text>
          <Text style={styles.sectionTitle}>Likelihood Rank</Text>
        </View>

        <View style={styles.tileSection}>
          {dynamicTiles.map((tile) => (
            <View key={tile.id} style={styles.tile}>
              <Text style={styles.tileText}>{tile.college}</Text>
              <Text style={styles.tileText}>{tile.position} | {tile.year}</Text>
              <Text style={styles.tileText}>Rank: {tile.ranking}</Text>
              <Text style={styles.tileText}>Draft: {tile.draftRange}</Text>
              <TouchableOpacity style={styles.viewAllButton}>
                <Text style={styles.viewAllText}>View All</Text>
              </TouchableOpacity>
            </View>
          ))}
        </View>

        <View style={styles.bottomSection}>
          <TextInput
            placeholder="Search players..."
            value={searchQuery}
            onChangeText={setSearchQuery}
            style={styles.searchBar}
          />
          <TouchableOpacity onPress={() => setViewFavorites(!viewFavorites)} style={styles.toggleButton}>
            <Text style={styles.toggleText}>
              {viewFavorites ? 'Favorited players under management' : 'Active list of existing players'}
            </Text>
          </TouchableOpacity>

          <View style={styles.dataDisplay}>
            <Text style={styles.dataRow}>Name | 40yd | Pos | Year | NIL | Score | Rank | Draft</Text>
            {/* Dynamic player data rows go here */}
          </View>
        </View>
      </ScrollView>
    </SafeAreaView>
  );
}

